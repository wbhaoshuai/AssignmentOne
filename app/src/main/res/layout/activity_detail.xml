<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical">

    <!-- Top section (3/10.5 of total height) with image and title side by side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:background="@drawable/img_main_banner"
        >

        <!-- Detail image view, takes half width of top section -->
        <ImageView
            android:id="@+id/detailImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_facilities"
            android:background="#CC222222"
            />

        <!-- Main item text, centered in right half -->
        <TextView
            android:id="@+id/ItemTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Facilities"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="#CC222222"
            />

    </LinearLayout>

    <!-- Title bar (0.5/10.5 of total height) -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="This is title"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <!-- Scrollable content area (7/10.5 of total height) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <!-- Main content display text -->
        <TextView
            android:id="@+id/contentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This content"
            android:background="@color/white"
            android:textColor="@color/black"
            />

    </ScrollView>

</LinearLayout>