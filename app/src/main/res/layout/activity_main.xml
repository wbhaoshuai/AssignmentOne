<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- Top banner area, occupies 10/20 of total height.
        Uses ConstraintLayout for image-text overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        >

        <!-- Background image for the banner, cropped to center -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_main_banner"
            />

        <!-- Banner title text, centered over the image -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_content"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- First row of function buttons, occupies 4/20 of total height, horizontally arranged -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        >
        <!-- Image button for facilities, with selector background -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_facilities"
            android:background="@drawable/button_selector"
            android:onClick="onClickFacilities"
            />
        <!-- Image button for events, with selector background -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_events"
            android:background="@drawable/button_selector"
            android:onClick="onClickEvents"
            />

    </LinearLayout>

    <!-- Label row for first button group, occupies 1/20 of total height -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/facilities"
            android:textColor="@color/white"
            android:background="@drawable/text_selector"
            android:onClick="onClickFacilities"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/events"
            android:textColor="@color/white"
            android:background="@drawable/text_selector"
            android:onClick="onClickEvents"
            />

    </LinearLayout>

    <!-- Second row of function buttons, same height ratio as first button row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        >
        <!-- Image button for clubs -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_clubs"
            android:background="@drawable/button_selector"
            android:onClick="onClickClubs"
            />
        <!-- Image button for support -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/img_btn_support"
            android:background="@drawable/button_selector"
            android:onClick="onClickSupport"
            />

    </LinearLayout>

    <!-- Label row for second button group, same height ratio as first label row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/clubs"
            android:textColor="@color/white"
            android:background="@drawable/text_selector"
            android:onClick="onClickClubs"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/support"
            android:textColor="@color/white"
            android:background="@drawable/text_selector"
            android:onClick="onClickSupport"
            />

    </LinearLayout>

</LinearLayout>